@page "/Settings"
<h3>Settings</h3>
<h5>Input method</h5>
<label>
    <input 
        style ="margin-right: 5px;"
        type="radio"
        value=""
        checked="@(IsDroplist == true)"
        name = "group"
        @onclick="()=>DroplistSwitch(true)"
    />I want to choose one first letter of nickname
</label>
<br/>
<input
        style ="margin-right: 5px;"
        type="radio"
        value=""
        checked="@(IsDroplist == false)"
        name="group"
        @onclick="() => DroplistSwitch(false)"
/>I want to type start of my nickname
<h5>Generator type</h5>
    <select style ="margin-top: 5px;
                        margin-right: 5px;"
            @bind="GeneratorType">
        <option value="1">1 - easy to pronounce</option>
        <option value="2">2 - totally random and sometimes prettier</option>
    </select>

@code {
    public static bool IsDroplist = true;
    public static int GeneratorType = 1;

    void DroplistSwitch(bool toDroplist)
    {
        IsDroplist = toDroplist;
        Index.Nickname.Start = null;
    }
    
}